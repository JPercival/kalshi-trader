    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 0.75rem; text-align: left; border-bottom: 1px solid #2a2d37; }
    th { color: #8b8fa3; font-weight: 500; font-size: 0.85rem; text-transform: uppercase; }
    .positive { color: #4ade80; }
    .negative { color: #f87171; }
    .badge { display: inline-block; padding: 0.2rem 0.5rem; border-radius: 4px; font-size: 0.75rem; font-weight: 600; }
    .badge-yes { background: #1a3a2a; color: #4ade80; }
    .badge-no { background: #3a1a1a; color: #f87171; }
    .badge-open { background: #1a2a3a; color: #4f9cf7; }
    h1 { margin-bottom: 1.5rem; }
    h2 { margin-bottom: 1rem; color: #c0c4d0; }
  </style>
